<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TarefasApp.Pages.DetailsPage"
             Title="Detalhes da Tarefa"
             BackgroundColor="#F7F8FC">

    <ScrollView Padding="20">

        <VerticalStackLayout Spacing="25" VerticalOptions="Center">

            <!-- Cabeçalho -->
            <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                <Label Text="Detalhes da Tarefa"
                       FontSize="30"
                       FontAttributes="Bold"
                       TextColor="#4C6D80"
                       HorizontalOptions="Center" />
                <Label Text="Veja abaixo as informações desta tarefa"
                       FontSize="14"
                       TextColor="#7F8C9D"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"/>
            </VerticalStackLayout>

            <!-- Card com detalhes -->
            <Border BackgroundColor="White"
                    StrokeShape="RoundRectangle 16"
                    StrokeThickness="0"
                    Padding="30"
                    Shadow="Medium"
                    Margin="0,10">

                <VerticalStackLayout Spacing="22">

                    <!-- Título -->
                    <VerticalStackLayout>
                        <Label Text="Título"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#4C6D80"/>
                        <Label Text="{Binding Title}"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="Black"/>
                    </VerticalStackLayout>

                    <!-- Descrição -->
                    <VerticalStackLayout>
                        <Label Text="Descrição"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#4C6D80"/>
                        <Label Text="{Binding Description}"
                               FontSize="16"
                               TextColor="Black"
                               LineBreakMode="WordWrap"/>
                    </VerticalStackLayout>

                    <!-- Data -->
                    <VerticalStackLayout>
                        <Label Text="Data de Criação"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#4C6D80"/>
                        <Label Text="{Binding CreateAt, StringFormat='{0:dd/MM/yyyy}'}"
                               FontSize="16"
                               TextColor="Black"/>
                    </VerticalStackLayout>

                    <!-- Prioridade -->
                    <VerticalStackLayout>
                        <Label Text="Prioridade"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#4C6D80"/>
                        <Label Text="{Binding Priority}"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#2e7d32"/>
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </Border>

            <!-- Botões de ação -->
            <VerticalStackLayout Spacing="20">
                <Button Text="Editar"
                        Clicked="OnEditarClick"
                        BackgroundColor="#4C6D80"
                        TextColor="White"
                        CornerRadius="12"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        Padding="10"/>
                <Button Text="Excluir"
                        Clicked="OnExcluirClick"
                        BackgroundColor="#C62828"
                        TextColor="White"
                        CornerRadius="12"
                        HeightRequest="50"
                        Padding="10"/>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
